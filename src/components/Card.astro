---
import type { MuseumItem } from '../lib/types';
import OptimizedImage from './OptimizedImage.astro';
const { post } = Astro.props as { post: MuseumItem };

const img = post.image?.url ?? 'https://picsum.photos/400/400?blur=1';
---
<article class="card" data-card data-post-id={post.id}>
  <a href={`/rideborn-site/posts/${post.slug}`} class="card-link">
    <OptimizedImage 
      src={img}
      alt={post.title}
      size="card"
    />
  </a>
  <button class="pin-button" data-pin-button title="Pin/Unpin this card">
    <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
      <path d="M16,12V4H17V2H7V4H8V12L6,14V16H11.2V22H12.8V16H18V14L16,12M8.8,14L10,12.8V4H14V12.8L15.2,14H8.8Z"/>
    </svg>
  </button>
</article>
