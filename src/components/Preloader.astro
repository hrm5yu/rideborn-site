---
// Ultimate Cyberpunk Preloader with GSAP
---

<div id="preloader" class="preloader">
  <div class="countdown-container">
    <div class="countdown-text" id="countdown-text">2025</div>
  </div>
</div>

<style>
  .preloader {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: #000;
    display: none; /* 最初は非表示 */
    align-items: center;
    justify-content: center;
    z-index: 9999;
    font-family: "Anton", "Arial", sans-serif;
    overflow: hidden;
  }
  
  /* 初回訪問時のみ表示 */
  .preloader.show {
    display: flex;
  }

  .countdown-container {
    text-align: center;
  }

  .countdown-text {
    font-size: 6rem;
    color: #dfdbcf; /* TOPページの背景色 */
    font-weight: bold;
    letter-spacing: 2px;
  }

  /* Responsive design */
  @media (max-width: 768px) {
    .countdown-text {
      font-size: 4rem;
    }
  }

  @media (max-width: 480px) {
    .countdown-text {
      font-size: 3rem;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const preloader = document.getElementById('preloader');
    const countdownText = document.getElementById('countdown-text');
    
    if (!preloader || !countdownText) return;
    
    // Check if this is the first visit
    const hasVisited = sessionStorage.getItem('hasVisited');
    
    // 初回訪問でない場合は何もしない
    if (hasVisited) {
      return;
    }
    
    // 初回訪問のみプリロード画面を表示
    preloader.classList.add('show');
    sessionStorage.setItem('hasVisited', 'true');
    
    // Start Countdown
    startCountdown();
    
    function startCountdown() {
      const currentYear = new Date().getFullYear();
      const targetYear = 1960;
      const totalYears = currentYear - targetYear;
      
      let currentYearValue = currentYear;
      
      // カウントダウン開始
      const countdownInterval = setInterval(() => {
        if (currentYearValue > targetYear) {
          currentYearValue--;
          countdownText.textContent = currentYearValue.toString();
        } else {
          clearInterval(countdownInterval);
          
          // カウントダウン完了後、少し待ってからフェードアウト
          setTimeout(() => {
            preloader.style.opacity = '0';
            setTimeout(() => {
              preloader.classList.remove('show');
            }, 500);
          }, 1000);
        }
      }, 100); // 100ms間隔でカウントダウン
    }
  });
</script>
