    <!-- <script src="https://cdn.jsdelivr.net/particles.js/2.0.0/particles.min.js"></script> -->
    <!-- <script src="/js/glitch-effects.js" defer></script> -->
    <!-- <script src="/js/gsap-effects.js" defer></script> -->
    <script src="/rideborn-site/js/custom-cursor.js" defer></script>
    <!-- <script src="/js/flicker-effects.js" defer></script> -->
    <!-- <script src="/js/advanced-effects.js" defer></script> -->
    <!-- <script src="/js/particles-config.js" defer></script> -->
    <!-- <script src="/js/preloader-effects.js" defer></script> -->
    <!-- <script src="/js/page-transitions.js" defer></script> -->
  </head>
  <body>
    <Preloader />
    <div class="main-content">
      <slot />
    </div>
    <script src="/rideborn-site/js/main.js" defer></script>
  </body>
</html>
