---
import Layout from '../components/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---
<Layout title="MUSEUM - Ride Born">
  <Header />
  <main class="main museum-page">
    <section class="gallery">
      <div class="gallery-header">
        <h2>MUSEUM</h2>
        <div class="gallery-controls">
          <button class="shuffle-btn" data-shuffle>Shuffle</button>
          <button class="reset-btn" data-sort-reset>Reset Order</button>
        </div>
      </div>
      <div class="gallery-grid" data-sortable-container>
        <div class="coming-soon">
          <h3>Coming Soon</h3>
          <p>Museum content will be available soon.</p>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout>

<style>
  .coming-soon {
    text-align: center;
    padding: 4rem 2rem;
    color: var(--text-color);
  }
  
  .coming-soon h3 {
    font-family: "Anton", "Arial", sans-serif;
    font-size: 2rem;
    margin-bottom: 1rem;
    color: var(--primary-color);
  }
  
  .coming-soon p {
    font-family: "Noto Sans JP", "Arial", sans-serif;
    font-size: 1.1rem;
    opacity: 0.8;
  }
</style>
